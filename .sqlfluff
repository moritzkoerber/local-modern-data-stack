[sqlfluff]
dialect = duckdb
templater = dbt
exclude_rules = L031,L034

[sqlfluff:templater:dbt]
# Point to your dbt project & profiles (both exist at repo root per provided structure)
project_dir = .
profiles_dir = .

[sqlfluff:rules:capitalisation.keywords]
# Replacement for deprecated L010 in sqlfluff >=3.x
capitalisation_policy = upper

[sqlfluff:rules:capitalisation.identifiers]
# Replacement for deprecated L014 (identifiers). Choose how identifiers should look.
# Options: upper|lower|capitalise|consistent. Pick lower for typical dbt style.
capitalisation_policy = lower

# If you also want to enforce quoting style you can enable the quoting rule, e.g.:
# [sqlfluff:rules:quotes]
# prefer_quoted_identifiers = False
